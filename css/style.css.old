html {
    scroll-behavior: smooth;
    font-family: 'Manrope', sans-serif;
}
body {
    margin: 0 auto;
}
a {
    text-decoration: none;
}

/* Flex initialization */
header, .background {
    display: flex;
}

header {
    color: white;
    background-image: url(/unsplash2.jpg);
    background-size: cover;
    background-position: center top;
    background-attachment: fixed
}

.background {
    height: 600px;
    /* padding-top: 4rem; */
    padding-bottom: 4rem; 
    background-image: linear-gradient(
        140deg,
        rgba(212,0,127,0.75) 0%,
        rgba(152,0,162,0.75) 35%,
        rgba(94,0,196,0.75) 100%
        );
    justify-content: center;
    align-items: center;
    background-attachment: fixed
}

.header-text {
    flex-direction: column;
}

header img {
    width: 15%;
    height: auto;
    border-radius: 25%;
    margin-right: 3.5rem;
}

.header-text h1 {
    font-weight: 700;
}

.header-text a {
    color: white;
    margin-right: 0.8em;
}